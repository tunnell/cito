#!/usr/bin/env python
from celery import Celery
import time
from wax.EventBuilder.Processor import sampletime_fmt

#Specify mongodb host and datababse to connect to

BROKER_URL = 'mongodb://xedaqje.no-ip.biz:27017/jobs'

celery = Celery('EOD_TASKS',
                broker=BROKER_URL,
                backend=BROKER_URL)
i = 0
@celery.task
def add(x, y):
    i += x
    time.sleep(1)
    return sampletime_fmt(1000)

